    "409": {
      "description": {
        "en": "Application-specific error code 409",
        "cs": "Aplikační chybový kód 409"
      },
      "severity": "error",
      "retry": true
    },
    "500": {
      "description": {
        "en": "Internal server error",
        "cs": "Interní chyba serveru"
      },
      "severity": "critical",
      "retry": true
    }
